.list-container {
  padding: 20rpx;
}
.list-container .list-item {
  display: flex;
  margin-bottom: 30rpx;
}
.list-container .img-cont {
  flex-shrink: 0;
  border-radius: 10rpx;
  overflow: hidden;
}
.list-container .img-cont image {
  width: 300rpx;
  height: 200rpx;
  display: block;
}
.list-container .name, .list-container .desc {
  color: #666;
  overflow: hidden;
  line-height: 1.4;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list-container .name {
  color: #333;
  font-size: 30rpx;
  -webkit-line-clamp: 1;
}
.list-container .list-item .text-cont {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.list-container .tags {
  display: flex;
  align-items: center;
}
.list-container .tags .save {
  margin-left: 20rpx;
}
.search-cont {
  margin-bottom: 20rpx;
}
.search-cont input {
  border: 1px solid #e0e0e0;
  padding: 4rpx 8rpx;
}